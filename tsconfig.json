{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "jest"] ,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "test/integration/**/*.ts",
    "test/unit/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}