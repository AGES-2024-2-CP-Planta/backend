{
  "compilerOptions": {
    "module": "ESNext",    
    "target": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "jest"] ,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/**/*.js", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
